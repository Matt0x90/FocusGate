{
  "manifest_version": 3,
  "name": "FocusGate",
  "version": "1.0.0",
  "description": "Block time-wasting sites with per-site permissions. One-tap snooze when you really need access.",
  "permissions": [
    "declarativeNetRequest",
    "storage", 
    "alarms"
  ],
  "optional_host_permissions": ["*://*/*"],
  "background": { 
    "service_worker": "sw.js" 
  },
  "action": { 
    "default_title": "FocusGate", 
    "default_popup": "popup.html" 
  },
  "icons": {
    "16": "icons/blocker_icon_16.png",
    "32": "icons/blocker_icon_32.png",
    "48": "icons/blocker_icon_48.png",
    "128": "icons/blocker_icon_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js", "blocked.css"],
      "matches": ["*://*/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; style-src 'self' 'unsafe-inline';"
  },
  "incognito": "split",
  "minimum_chrome_version": "114",
  "default_locale": "en"
}